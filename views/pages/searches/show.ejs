<body>
  <!-- <h1>Thank you for your search</h1> -->
  <h6>Search Results</h6> 

  <ul>
      <% books.forEach(book => { %>
        
        <li>
          <img src=<%=book.image_url %>>
          <h3><%= book.title %></h3>
          <h4><%= book.author %></h4>
          <p><%= book.description %></p>
          <p> ISBN: <% book.isbn %></p>
          <!-- <p> Bookshelf: <%= book.bookshelf %></p>
          <a href="/details/<%=book.id%>">View Details</a>  -->
        </li>
      <% }) %>
    </ul>
  
</body>
</html>